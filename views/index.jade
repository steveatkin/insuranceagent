.container
  .row
    .col-sm-8
      #accordion.panel-group
        .panel.panel-default
          .panel-heading
            h4.panel-title
              a#policy-tab(data-toggle='collapse', data-parent='#accordion', href='#policy')
          #policy.panel-collapse.collapse.in
            .panel-body
              form
                .form-group
                  label#family-message(for='family')
                  input#family.form-control(type='text', disabled='')
                  label#given-message(for='given')
                  input#given.form-control(type='text', disabled='')
                  label#city-message(for='city')
                  input#city.form-control(type='text', disabled='')
                  label#state-message(for='state')
                  input#state.form-control(type='text', disabled='')
                  label#policy-type-message(for='policy-type')
                  input#policy-type.form-control(type='text', disabled='')
                  label#numbers-message(for='number-of-policies')
                  input#number-of-policies.form-control(type='text', disabled='')
                  label#coverage-message(for='coverage')
                  input#coverage.form-control(type='text', disabled='')
                  label#effective-message(for='effective')
                  input#effective.form-control(type='text', disabled='')
                  label#inception-message(for='policy-months')
                  input#policy-months.form-control(type='text', disabled='')
                  label#monthly-message(for='monthly-premium')
                  input#monthly-premium.form-control(type='text', disabled='')
                  label#vehicle-message(for='vehicle')
                  input#vehicle.form-control(type='text', disabled='')
        .panel.panel-default
          .panel-heading
            h4.panel-title
              a#claims-tab(data-toggle='collapse', data-parent='#accordion', href='#claims')
          #claims.panel-collapse.collapse.in
            .panel-body
              form
                .form-group
                  label#claim-message(for='months-since-claim')
                  input#months-since-claim.form-control(type='text', disabled='')
                  label#claim-reason(for='reason')
                  input#reason.form-control(type='text', disabled='')
                  label#claim-amount(for='amount')
                  input#amount.form-control(type='text', disabled='')
                  label#claim-state(for='current-state')
                  input#current-state.form-control(type='text', disabled='')
              table#history-table
        .panel.panel-default
          .panel-heading
            h4.panel-title
              a#offers-tab(data-toggle='collapse', data-parent='#accordion', href='#offers')
          #offers.panel-collapse.collapse.in
            .panel-body
              form
                .form-group
                  label#offer-message(for='special-offers')
                  input#special-offers.form-control(type='text', disabled='')
    .col-sm-4
      .form-group
        label#weather(for='forecast')
        textarea#forecast.form-control(rows='5')
        label#actions(for='recommendations')
        textarea#recommendations.form-control(rows='5')
